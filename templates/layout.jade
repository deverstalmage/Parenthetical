doctype html
meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
meta(name='viewport', content='width=device-width, initial-scale=1')
html
  head
    title= (htmltitle ? htmltitle : title) + ' - Parenthetical'
    link(href='http://fonts.googleapis.com/css?family=Arvo:400,700,400italic,700italic|Bitter:400,700,400italic|Playfair+Display:900', rel='stylesheet', type='text/css')
    link(href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css', rel='stylesheet', type='text/css')
    link(href='styles/main.css', rel='stylesheet', type='text/css')

    link(rel='shortcut icon', href='favicon.ico')
    link(rel='apple-itouch-icon', href='favicon.png')
    block head
  body(class='#{link} #{collection}')
    .l-wrap
      header.l-header
        .l-masthead
          a(href='http://deve.rs/') deve.rs
          a(href='/blog/').blog /blog/
        nav.l-navigation
          ul
            li.u-left
              a(href='/blog/')
                i.fa.fa-home
            li.u-right
              a(href='/blog/about/')
                i.fa.fa-question-circle
        .l-container
          h1= (title ? title : link)
        
      main.l-content
        .l-container
          block content
    footer.l-footer
      .l-container
          a(href='/blog/').u-right all articles
          div &copy; 2015 - deve.rs

    script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.0/highlight.min.js')
    script(src='//code.jquery.com/jquery-2.1.0.min.js')
    script(src='scripts/main.min.js')